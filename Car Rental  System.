create database company;
USE company;

-- جدول السيارات
create table car (
    id int primary key,
    name varchar(20),
    model varchar(20),
    color varchar(10),
    price int not null 
);

-- جدول المستخدمين
create table user (
    id int primary key,
    name varchar(20),
    gender char check (gender = 'm' or gender = 'f'),
    email varchar(20),
    phonenumber varchar(10),
    id_order int 
);

-- جدول الطلبات
create table orders (
    id int primary key,
    startDate datetime,
    endDate datetime,
    status varchar(16) check (status = 'Available' or status = 'Reserved'),
    price int not null,
    id_car int,
    id_user int,
    foreign key (id_car) references car(id),
    foreign key (id_user) references user(id)
);

-- جدول الشركة
create table company (
    id int primary key,
    startDate datetime,
    id_user int,
    id_car int,
    foreign key (id_car) references car(id),
    foreign key (id_user) references user(id)
);

-- جدول الصيانة
create table maintenance (
    id int primary key,
    maintenanceHistory datetime, 
    price int not null,
    id_car int,
    foreign key (id_car) references car(id)
);

-- إدخال البيانات
